{
  "name": "Persona Extension",
  "description": "Test persona in a browser extension",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Persona",
    "default_popup": "index.html"
  },
  "permissions": [
    "contextMenus"
  ],

  "icons": {
    "16": "/icons/favicon-16x16.png",
    "32": "/icons/favicon-32x32.png",
    "128": "/icons/favicon-192x192.png"
  }
}
